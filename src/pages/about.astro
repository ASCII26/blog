---
import BaseLayout from '../layouts/BaseLayout.astro';
import { PERSONAL_INFO, SKILLS, EXPERIENCES } from '../consts';
---

<BaseLayout
	title="关于我"
	description="了解更多关于我的个人信息、技能和经历"
	heroImage="/about-hero.jpg"
>
	<div class="about-container">
		<section class="bio-section">
			<h2>个人简介</h2>
			<p>{PERSONAL_INFO.bio}</p>
			<div class="contact-info">
				<p><strong>位置：</strong> {PERSONAL_INFO.location}</p>
				<p><strong>邮箱：</strong> <a href={`mailto:${PERSONAL_INFO.email}`}>{PERSONAL_INFO.email}</a></p>
			</div>
		</section>

		<section class="skills-section">
			<h2>技能专长</h2>
			
			<div class="skill-category">
				<h3>编程语言</h3>
				<div class="skill-tags">
					{SKILLS.languages.map(skill => <span class="skill-tag">{skill}</span>)}
				</div>
			</div>
			
			<div class="skill-category">
				<h3>框架 & 库</h3>
				<div class="skill-tags">
					{SKILLS.frameworks.map(skill => <span class="skill-tag">{skill}</span>)}
				</div>
			</div>
			
			<div class="skill-category">
				<h3>工具 & 技术</h3>
				<div class="skill-tags">
					{SKILLS.tools.map(skill => <span class="skill-tag">{skill}</span>)}
				</div>
			</div>
			
			<div class="skill-category">
				<h3>数据库</h3>
				<div class="skill-tags">
					{SKILLS.databases.map(skill => <span class="skill-tag">{skill}</span>)}
				</div>
			</div>
			
			<div class="skill-category">
				<h3>其他专长</h3>
				<div class="skill-tags">
					{SKILLS.other.map(skill => <span class="skill-tag">{skill}</span>)}
				</div>
			</div>
		</section>

		<section class="experience-section">
			<h2>工作经历</h2>
			<div class="timeline">
				{EXPERIENCES.work.map(job => (
					<div class="timeline-item">
						<div class="timeline-dot"></div>
						<div class="timeline-date">{job.startDate} - {job.endDate}</div>
						<div class="timeline-content">
							<h3>{job.position}</h3>
							<h4>{job.company}</h4>
							<p>{job.description}</p>
						</div>
					</div>
				))}
			</div>
		</section>

		<section class="education-section">
			<h2>教育背景</h2>
			<div class="timeline">
				{EXPERIENCES.education.map(edu => (
					<div class="timeline-item">
						<div class="timeline-dot"></div>
						<div class="timeline-date">{edu.startDate} - {edu.endDate}</div>
						<div class="timeline-content">
							<h3>{edu.degree} - {edu.field}</h3>
							<h4>{edu.institution}</h4>
							<p>{edu.description}</p>
						</div>
					</div>
				))}
			</div>
		</section>
	</div>
</BaseLayout>

<style>
	.about-container {
		max-width: 800px;
		margin: 0 auto;
	}
	
	section {
		margin-bottom: 3rem;
	}
	
	h2 {
		color: rgb(var(--accent));
		border-bottom: 2px solid rgb(var(--accent-light));
		padding-bottom: 0.5rem;
		margin-bottom: 1.5rem;
	}
	
	.contact-info {
		background: rgb(var(--gray-light), 0.3);
		padding: 1rem;
		border-radius: 8px;
		margin-top: 1.5rem;
	}
	
	.skill-category {
		margin-bottom: 1.5rem;
	}
	
	.skill-category h3 {
		margin-bottom: 0.8rem;
	}
	
	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6rem;
	}
	
	.skill-tag {
		background: rgb(var(--accent-light));
		color: rgb(var(--accent-dark));
		padding: 0.4rem 0.8rem;
		border-radius: 20px;
		font-size: 0.9rem;
	}
	
	.timeline {
		position: relative;
		padding-left: 2rem;
	}
	
	.timeline:before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		height: 100%;
		width: 2px;
		background: rgb(var(--gray-light));
	}
	
	.timeline-item {
		position: relative;
		margin-bottom: 2rem;
	}
	
	.timeline-dot {
		position: absolute;
		left: -2.4rem;
		top: 0.3rem;
		width: 1rem;
		height: 1rem;
		border-radius: 50%;
		background: rgb(var(--accent));
	}
	
	.timeline-date {
		color: rgb(var(--gray));
		font-size: 0.9rem;
		margin-bottom: 0.5rem;
	}
	
	.timeline-content h3 {
		margin: 0 0 0.3rem 0;
	}
	
	.timeline-content h4 {
		margin: 0 0 0.8rem 0;
		font-weight: normal;
		color: rgb(var(--gray-dark));
	}
</style>
