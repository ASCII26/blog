<style>
	footer {
		padding: 2em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray-dark));
	}
	
	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		padding-bottom: 2rem;
	}
	
	.footer-info h3,
	.footer-links h3,
	.footer-contact h3 {
		margin-top: 0;
		margin-bottom: 1rem;
		font-size: 1.3rem;
	}
	
	.footer-links ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.footer-links li {
		margin-bottom: 0.5rem;
	}
	
	.footer-links a,
	.footer-contact a {
		color: rgb(var(--gray-dark));
		text-decoration: none;
	}
	
	.footer-links a:hover,
	.footer-contact a:hover {
		color: rgb(var(--accent));
		text-decoration: underline;
	}
	
	.footer-bottom {
		max-width: 1200px;
		margin: 0 auto;
		padding-top: 2rem;
		border-top: 1px solid rgba(var(--gray), 0.5);
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
	}
	
	.social-links {
		display: flex;
		gap: 1em;
	}
	
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray-dark));
	}
	
	.social-links a:hover {
		color: rgb(var(--accent));
	}
	
	@media (max-width: 720px) {
		.footer-bottom {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
